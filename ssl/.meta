if [[ $UID == 0 ]]; then
  # disabled temporarily, see https://www.archlinux.org/news/ca-certificates-update/
#  zstyle ':ride:ssl' enabled true
  zstyle ':ride:ssl:symlink:*' path /etc/ssl/certs
else
  case `hostname -f` in
    *.cs.colostate.edu )
      zstyle ':ride:ssl' enabled true
      zstyle ':ride:ssl:symlink:*' path ~/.ssl
  esac
fi

zstyle ':ride:ssl:symlink:*' name '?'
