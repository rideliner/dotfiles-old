if [[ $UID == 0 ]]; then
  zstyle ':ride:ssl' enabled true
  zstyle ':ride:ssl:symlink:*' path /etc/ca-certificates/trust-source/anchors
else
  case `hostname -f` in
    *.cs.colostate.edu )
      zstyle ':ride:ssl' enabled true
      zstyle ':ride:ssl:symlink:*' path '~/.!'
  esac
fi

zstyle ':ride:ssl:symlink:*' name '?'
