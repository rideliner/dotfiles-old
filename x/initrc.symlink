#!/bin/sh

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

[[ -f ~/.Xresources ]] && xrdb -merge ~/.Xresources

[[ -f ~/.xinitrc.local ]] && . ~/.xinitrc.local

xautolock &

case "$1" in
  cinnamon) exec cinnamon-session ;;
  *) exec cinnamon-session ;;
esac
