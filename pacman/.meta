if (( $+commands[pacman] )) && [[ ! $(uname -m) =~ "arm*" ]]; then
  zstyle ':ride:pacman' enabled true

  if [[ $UID == 0 ]]; then
    zstyle ':ride:pacman:symlink:conf' path '/etc'
    zstyle ':ride:pacman:symlink:conf' name '!.?'
  else
    zstyle ':ride:pacman:symlink:conf' enabled false
  fi
fi
