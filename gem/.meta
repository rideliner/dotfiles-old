if [[ $UID != 0 ]]; then
  case $DOTFILES_FULL_HOST in
    marple* | hastings* )
      zstyle ':ride:gem' enabled true
  esac
fi

zstyle ':ride:gem' depend ruby

zstyle ':ride:gem:symlink:rc' name '.!?'

zstyle ':ride:gem:symlink:rubygems' path '~/.!'
zstyle ':ride:gem:symlink:rubygems' name 'credentials'
