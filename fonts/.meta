if [[ $UID != 0 ]]; then
  case $DOTFILES_FULL_HOST in
    hastings* | marple* )
      zstyle ':ride:fonts:symlink:self' path ~/.local/share
      zstyle ':ride:fonts:symlink:self' name '!'
      zstyle ':ride:fonts' enabled true
      ;;
    *.cs.colostate.edu )
      zstyle ':ride:fonts:symlink:self' name '.!'
      zstyle ':ride:fonts' enabled true
  esac
fi
