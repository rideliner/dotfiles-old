function() {
  zstyle ':ride:terminal' enabled true

  local color console char

  case $DOTFILES_FULL_HOST in
    poirot* )
      color=red ;;
    marple* )
      color=cyan ;;
    pyne* )
      color=magenta ;;
    hastings* )
      color=green ;;
    lemon* )
      color=yellow ;;
    * )
      color=white
  esac

  case `whoami` in
    ride )
      char='\u271D'
      console='+'
      ;;
    root )
      char='\uA4' ;;
    * )
      char='$'
  esac

  zstyle ':ride:terminal:prompt' color $color
  zstyle ':ride:terminal:prompt' char $char
  [[ -n $console ]] && zstyle ':ride:terminal:prompt' console-char $console
}
