#!/usr/bin/env zsh

function() {
  local file="$HOME/.vim/autoload/plug.vim"
  local cmd=""

  if [[ ! -e "$file" ]]; then
    curl -fLo "$file" --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
  else
    cmd="PlugUpgrade |"
  fi

  vim -c "$cmd PlugUpdate | \$quit"
}
