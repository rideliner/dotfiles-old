#!/usr/bin/env zsh

function {
  local file="$DOTFILES_PATH/ssh/config.symlink"

  if [[ ! -r $file ]]; then
    fail "You do not have read permissions for $file"
    return $?
  fi

  if [[ -w $file && ! -O $file ]]; then
    fail "Only the owner of $file should have write permissions"
    return $?
  fi
}
